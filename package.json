{
    "name": "bar-portfolio",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        ".",
        "client"
    ],
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/index.js",
        "client": "cd client && npm start",
        "build": "node scripts/check-node.js && cd client && npm run build",
        "start": "node server/index.js",
        "install-all": "npm install && cd client && npm install",
        "deploy:build": "npm run build",
        "deploy:docker": "docker build -t bar-portfolio .",
        "deploy:compose": "docker-compose up -d",
        "deploy:heroku": "git push heroku main",
        "deploy:vercel": "vercel --prod",
        "deploy:netlify": "netlify deploy --prod --dir=client/build",
        "clean": "rm -rf node_modules client/node_modules client/build",
        "postinstall": "cd client && npm install",
        "test": "cd client && npm test",
        "lint": "cd client && npm run lint",
        "preview": "npm run build && npm start",
        "check-node": "node scripts/check-node.js"
    },
    "dependencies": {
        "express": "^4.21.2",
        "cors": "^2.8.5",
        "helmet": "^7.2.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}